{
  "name": "ovault-poc",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf artifacts cache out typechain-types",
    "compile": "concurrently -c auto --names forge,hardhat '$npm_execpath run compile:forge' '$npm_execpath run compile:hardhat'",
    "compile:forge": "forge build",
    "compile:hardhat": "hardhat compile",
    "lint": "$npm_execpath run lint:js && $npm_execpath run lint:sol",
    "lint:fix": "eslint --fix '**/*.{js,ts,json}' && prettier --write . && solhint 'contracts/**/*.sol' --fix --noPrompt",
    "lint:js": "eslint '**/*.{js,ts,json}' && prettier --check .",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "test": "$npm_execpath run test:forge && $npm_execpath run test:hardhat",
    "test:forge": "forge test",
    "test:hardhat": "hardhat test",
    "deploy": "hardhat lz:deploy",
    "deploy:OVault": "hardhat deploy --network optimism-testnet --tags OVault",
    "deploy:OOperator": "hardhat deploy --network sepolia --tags OOperator",
    "lz:wire:ovault": "hardhat lz:oapp:wire --oapp-config lz.ovault.config.ts",
    "lz:info:ovault": "hardhat lz:oapp:peers:get --oapp-config lz.ovault.config.ts",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:op": "hardhat verify --network optimism-testnet",
    "oapp:send": "hardhat sendMessage --network optimism-testnet --dst-network sepolia --message \"1\"",
    "ovault": "hardhat ovault --network optimism-testnet"
  },
  "resolutions": {
    "ethers": "^5.7.2",
    "hardhat-deploy": "^0.12.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@layerzerolabs/eslint-config-next": "~2.3.39",
    "@layerzerolabs/lz-definitions": "^3.0.75",
    "@layerzerolabs/lz-evm-messagelib-v2": "^3.0.75",
    "@layerzerolabs/lz-evm-protocol-v2": "^3.0.75",
    "@layerzerolabs/lz-evm-v1-0.7": "^3.0.75",
    "@layerzerolabs/lz-v2-utilities": "^3.0.75",
    "@layerzerolabs/metadata-tools": "^0.4.1",
    "@layerzerolabs/oapp-evm": "^0.3.2",
    "@layerzerolabs/prettier-config-next": "^2.3.39",
    "@layerzerolabs/solhint-config": "^3.0.12",
    "@layerzerolabs/test-devtools-evm-foundry": "~6.0.3",
    "@layerzerolabs/toolbox-foundry": "~0.1.12",
    "@layerzerolabs/toolbox-hardhat": "~0.6.9",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@rushstack/eslint-patch": "^1.7.0",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/eslint": "^8",
    "@types/mocha": "^10.0.6",
    "@types/node": "~18.18.14",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "chai": "^4.4.1",
    "concurrently": "~9.1.0",
    "dotenv": "^16.4.1",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-extended": "~2.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.22.10",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.12.1",
    "inquirer": "^12.5.2",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "solhint": "^4.1.1",
    "solidity-bytes-utils": "^0.8.2",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.4"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "pnpm": {
    "overrides": {
      "ethers": "^5.7.2",
      "hardhat-deploy": "^0.12.1"
    }
  },
